<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layoutDirection="ltr"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/cutom_item_iv_productImage"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/custom_item_image" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_125sdp"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_50sdp"
            android:visibility="gone"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">

            <TextView
                android:id="@+id/custom_item_pName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/store"
                android:gravity="top"
                android:paddingStart="@dimen/_10sdp"
                android:text="Beats wireless headphones"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/custom_item_pPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/store"
                android:paddingStart="@dimen/_10sdp"
                android:text="$349.95"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/custom_item_pDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/store"
                android:maxLines="8"
                android:paddingStart="@dimen/_10sdp"
                android:text="Pure Adaotive Noise Canceling (Pure ANC) blocks out distractions, so you can get closer to your music.Pure Adaotive Noise Canceling (Pure ANC) blocks out distractions, so you can get closer to your music.Pure Adaotive Noise Canceling (Pure ANC) blocks out distractions, so you can get closer to your music.Pure Adaotive Noise Canceling (Pure ANC) blocks out distractions, so you can get closer to your music.Pure Adaotive Noise Canceling (Pure ANC) blocks out distractions, so you can get closer to your music."
                android:textColor="@color/mr_cast_meta_default_background"
                android:textSize="12sp"
                android:visibility="visible"
                app:autoSizeTextType="none" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>